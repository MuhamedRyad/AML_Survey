{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",

  "CorsSettings": { // ← يجب أن يكون مباشرة بعد الفاصلة
    "PolicyName": "MyCustomPolicy",
    "AllowedOrigins": [
      "https://example.com",
      "https://anotherdomain.com",
      "http://localhost:4200"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH" ],
    "AllowedHeaders": [ "Content-Type", "Authorization", "Accept" ],
    "AllowCredentials": true,
    "MaxAge": 86400
  //},
  //"ConnectionStrings": {
  //  "DefaultConnection": "moved to secret.json"
  },
  "Database": {
    "MaxPoolSize": 64
  },
  "Jwt": { //"Key": "مش هنا عشان الامان", // => secret.json   > Key
    "Issuer": "AMLSurvey",
    "Audience": "AMLSurveyAppUsers",
    "ExpiryMinutes": 60
  }

}
